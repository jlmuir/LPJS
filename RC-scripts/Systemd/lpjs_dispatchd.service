[Unit]
Description=LPJS job dispatch service
Documentation=man:lpjs_dispatchd(8)
After=network.target
After=time-sync.target

[Service]
Type=forking
EnvironmentFile=-@sysconfigdir@/lpjs_dispatchd
ExecStart=@sbindir@/lpjs_dispatchd $OPTIONS
PIDFile=@runstatedir@/lpjs/lpjs_dispatchd.pid
RuntimeDirectory=lpjs
RuntimeDirectoryMode=0755
User=root
Group=root
Restart=on-abort

[Install]
WantedBy=multi-user.target
